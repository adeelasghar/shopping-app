<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>User</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
       <th style="width: 30%;">Product</th>
      <th style="width: 30%;">Text</th>
       <th style="width: 15%;">Price</th>
      <th></th>
    </tr>
  </thead>


  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product_id %></td>
        <td><%= order.user_id %></td>
        <td><%= order.quantity %></td>
         <td>
            <span><%= link_to 'Show', order, class:"btn btn-outline-secondary  btn-sm"  %> </span>
            <span><%= link_to 'Edit', edit_order_path(order), class: "btn btn-outline-secondary btn-sm"  %></span>
            <span><%= link_to 'Destroy' , order, method: :delete, data: { confirm: 'Are you sure?' },  
            class:"btn btn-outline-danger btn-sm"  %><span>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
