<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
       <th style="width: 15%;">Name</th>
      <th style="width: 50%;">Text</th>
       <th style="width: 15%;">Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
          <td><%= product.name %></td>
          <td><%= product.text %></td>
          <td><%= product.price %></td>
          <td>
            <span><%= link_to 'Show', product, class:"btn btn-outline-secondary  btn-sm"  %> </span>
            <span><%= link_to 'Edit', edit_product_path(product), class: "btn btn-outline-secondary btn-sm"  %></span>
            <span><%= link_to 'Destroy' , product, method: :delete, data: { confirm: 'Are you sure?' },  
            class:"btn btn-outline-danger btn-sm"  %><span>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
